# Preventing Index Of
Options -Indexes

# Enable Rewrite and Setting up
RewriteEngine On
ErrorDocument 404 /application/404.php
ErrorDocument 403 /application/403.php

# RewriteRule Category
RewriteRule ^berita application/model/home/blog.php [NC,L]
RewriteRule ^lowongan application/model/home/lowongan.php [NC,L]
RewriteRule ^magang application/model/home/magang.php [NC,L]

# RewriteRule Registration and Login
RewriteRule ^registration/check /application/config/configuration/check.php [NC,L]
RewriteRule ^registration/post application/model/()registration.php [NC,L]
RewriteRule ^registration application/model/registration.php [NC,L]

RewriteRule ^login application/model/login.php [NC,L]
RewriteRule ^logout application/model/logout.php [NC,L]

# RewriteRule Blog
RewriteRule ^article/([0-9]+)/([0-9a-zA-Z_-]+)$ application/model/article.php?id=$1&title=$2 [NC,L]


